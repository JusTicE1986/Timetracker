<UserControl x:Class="Timetracker.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timetracker.Views"
             xmlns:conv="clr-namespace:Timetracker.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI Variable"
             FontSize="14">
    <UserControl.Resources>
        <conv:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <conv:SmartTimeConverter x:Key="SmartTimeConverter"/>
        <conv:TimeSpanToReadableTextConverter x:Key="ReadableTextConverter"/>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="#000000"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.1"/>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="Background" Value="#28a745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!--<Setter Property="CornerRadius" Value="4"/>-->
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="Background" Value="#f0f0f0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!--<Setter Property="CornerRadius" Value="4"/>-->
        </Style>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#f9f9f9"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="RowHeight" Value="38"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#eeeeee"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8 6"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Klicken zum Anzeigen / Bearbeiten"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#dceeff"/>
                </Trigger>
                <DataTrigger Binding="{Binding IstFeiertag}" Value="True">
                    <Setter Property="Background" Value="#ffe4e1"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IstWochenende}" Value="True">
                    <Setter Property="Background" Value="#f0f0f0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <Style TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
        <Style x:Key="TimeSpanStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="{Binding Pause, StringFormat='hh\\:mm'}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>
    <ScrollViewer Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Eingabe + Monatsinfo nebeneinander -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>

                <!-- Eingabemaske -->
                <Border Grid.Column="0" Margin="0 0 20 0">
                    <StackPanel>
                        <TextBlock Text="Arbeitszeit erfassen"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0 0 0 10"/>
                        <UniformGrid Columns="2" Rows="2" Margin="0 0 0 10" Width="500" HorizontalAlignment="Left">
                            <!-- Datum -->
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="Datum:" Width="60" VerticalAlignment="Center"/>
                                <DatePicker SelectedDate="{Binding Datum}" />
                            </StackPanel>
                            <!-- Startzeit -->
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="Start:" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Start, Mode=TwoWay, Converter={StaticResource SmartTimeConverter}, UpdateSourceTrigger=LostFocus}"
                                     Width="100"
                                     GotKeyboardFocus="TextBox_GotKeyboardFocus"
                                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
                            </StackPanel>

                            <!-- Endzeit -->
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <TextBlock Text="Ende:" Width="60" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Ende, Mode=TwoWay, Converter={StaticResource SmartTimeConverter}, UpdateSourceTrigger=LostFocus}"
                                     Width="100"
                                     GotKeyboardFocus="TextBox_GotKeyboardFocus"
                                     PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
                            </StackPanel>
                        </UniformGrid>

                        <!-- Notiz -->
                        <StackPanel>
                            <TextBlock Text="Notiz" FontWeight="SemiBold" FontSize="13" Margin="0 0 0 4"/>
                            <TextBox Text="{Binding Notiz}" Height="80" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" BorderBrush="#ccc" Background="#fff" Padding="8"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0 10 0 0">
                            <Button Content="🔄 Reset" Command="{Binding ZuruecksetzenCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
                            <Button Content="💾 Speichern" Command="{Binding SpeichernCommand}" Style="{StaticResource PrimaryButtonStyle}" />
                            <Button Content="📄 Exportiere Woche" Command="{Binding ExportiereWocheCommand}" Style="{StaticResource PrimaryButtonStyle}" />
                            <Button Content="📅 Exportiere Monat" Command="{Binding ExportiereMonatCommand}" Style="{StaticResource PrimaryButtonStyle}" />
                            <Button Content="🗓️ Exportiere Zeitraum" Command="{Binding ExportiereZeitraumCommand}" Style="{StaticResource PrimaryButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Monatsinfo-Card -->
                <Border Grid.Column="1"
                    Padding="16"
                    CornerRadius="8"
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="1"
                    Effect="{StaticResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="{Binding AktuelleMonatsInfo.MonatJahr}"
                               FontSize="18" FontWeight="SemiBold" Margin="0 0 0 10"/>
                        <StackPanel Orientation="Horizontal" Margin="0 4">
                            <TextBlock Text="Sollzeit:" Width="120"/>
                            <TextBlock Text="{Binding AktuelleMonatsInfo.MonatlicheSollzeit, StringFormat=hh\\:mm}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 4">
                            <TextBlock Text="Gearbeitet:" Width="120"/>
                            <TextBlock Text="{Binding AktuelleMonatsInfo.MonatlichGearbeitet, StringFormat=hh\\:mm}" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 4">
                            <TextBlock Text="Saldo:" Width="120"/>
                            <TextBlock Text="{Binding AktuelleMonatsInfo.MonatlicheAbweichung, StringFormat=hh\\:mm}" FontWeight="Bold"/>
                        </StackPanel>
                        <Separator Margin="0 12"/>
                        <StackPanel Orientation="Horizontal" Margin="0 4">
                            <TextBlock Text="Gleitzeitkonto:" Width="120"/>
                            <TextBlock Text="{Binding AktuelleMonatsInfo.KumuliertesGleitzeitkonto, StringFormat=hh\\:mm}" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Wochenübersicht unten – über ganze Breite -->
            <Border Grid.Row="1">
                <StackPanel>
                    <TextBlock Text="Wochenübersicht"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0 0 0 10"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0 0 0 10">
                        <Button Content="◀" 
                                Command="{Binding WocheZurueckCommand}" 
                                Width="30"/>
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   Text="{Binding KalenderwochenAnzeige}"/>
                        <Button Content="▶" 
                                Command="{Binding WocheVorCommand}" 
                                Width="30"/>
                    </StackPanel>
                    <DataGrid Grid.Row="7"
                              ItemsSource="{Binding WochenDaten}"
                              SelectedItem="{Binding AusgewaehlterTag, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="0 10 0 10"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="ToolTip" Value="Klicken zum Anzeigen / Bearbeiten"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#dceeff"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IstFeiertag}" Value="True">
                                        <Setter Property="Background" Value="#ffe4e1"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IstWochenende}" Value="True">
                                        <Setter Property="Background" Value="#98FB98"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum"
                                        Binding="{Binding Datum, StringFormat='dd.MM.yyyy'}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Tag"
                                                Width="100"
                                        Binding="{Binding Wochentag}" />
                            <DataGridTextColumn Header="Pause"
                                                Binding="{Binding BerechnetePause, StringFormat=hh\\:mm}"
                                                ElementStyle="{StaticResource TimeSpanStyle}"
                                                Width="100"/>
                            <DataGridTemplateColumn Header="erfasst"
                                                    Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="16" TextAlignment="Center" HorizontalAlignment="Center"
                       Text="{Binding IstErfasst, Converter={StaticResource BoolToIconConverter}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="gearbeitet"
                                                Width="100"
                                        Binding="{Binding BerechneteGearbeiteteZeit, StringFormat=hh\\:mm}" />
                            <DataGridTextColumn Header="Besonderheit"
                                                Width="*"
                                        Binding="{Binding Besonderheit}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock
                            Text="{Binding WochenSumme, Converter={StaticResource ReadableTextConverter}}"
                            FontWeight="Bold"
                            FontSize="16"
                            HorizontalAlignment="Right"
                            Margin="0 0 0 10"
                            TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
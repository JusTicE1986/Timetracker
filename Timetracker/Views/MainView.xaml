<UserControl x:Class="Timetracker.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timetracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI Variable"
             FontSize="14">
    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect"
                          Color="#000000"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.1"/>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="Background" Value="#0078d7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!--<Setter Property="CornerRadius" Value="4"/>-->
        </Style>
        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#f2f2f2"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        </Style>
        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#eeeeee"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Klicken zum Anzeigen / Bearbeiten"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#dceeff"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer Padding="30">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Border>
                <StackPanel>
                    <TextBlock Text="Arbeitszeit erfassen"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0 0 0 10"/>
                    <UniformGrid Columns="2" Rows="2" Margin="0 0 0 10">
                        <!-- Datum -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Text="Datum:" Width="60" VerticalAlignment="Center"/>
                            <DatePicker SelectedDate="{Binding Datum}" />
                        </StackPanel>
                        <!-- Startzeit -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Text="Start:" Width="60" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Start}" Width="100"/>
                        </StackPanel>

                        <!-- Endzeit -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Text="Ende:" Width="60" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Ende}" Width="100"/>
                        </StackPanel>

                        <!-- Pause -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Text="Pause:" Width="60" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Pause}" Width="100"/>
                        </StackPanel>
                    </UniformGrid>
                    <!-- Notiz -->
                    <TextBox Text="{Binding Notiz}" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="0 0 0 10"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Laden" Command="{Binding LadenCommand}" Margin="0 0 10 0"/>
                        <Button Content="Speichern" Command="{Binding SpeichernCommand}" />

                    </StackPanel>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel>
                    <TextBlock Text="Gespeicherte Tage"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0 0 0 10"/>
                    <ListBox
                        ItemsSource="{Binding GespeicherteTage}"
                        SelectedItem="{Binding AusgewaehlterTag, Mode=TwoWay}"
                        Height="120"
                        Margin="0,10,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Datum, StringFormat='{}{0:dddd, dd.MM.yyyy}'}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
            <Border>
                <StackPanel>
                        <TextBlock Text="Wochenübersicht"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0 0 0 10"/>
                        <DataGrid Grid.Row="7"
                              ItemsSource="{Binding WochenDaten}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="0 10 0 10"
                              CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Datum"
                                        Binding="{Binding Datum, StringFormat=d}"/>
                                <DataGridTextColumn Header="Start"
                                        Binding="{Binding Start}" />
                                <DataGridTextColumn Header="Ende"
                                        Binding="{Binding Ende}" />
                                <DataGridTextColumn Header="Pause"
                                        Binding="{Binding Pause}" />
                                <DataGridTextColumn Header="Gearbeitet"
                                        Binding="{Binding GearbeiteteZeit}" />
                                <DataGridTextColumn Header="Notiz"
                                        Binding="{Binding Notiz}" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock
                            Text="{Binding WochenSumme}"
                            FontWeight="Bold"
                            FontSize="16"
                            HorizontalAlignment="Right"
                            Margin="0 0 0 10"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
